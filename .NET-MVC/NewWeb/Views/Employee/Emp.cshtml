
@model IEnumerable<NewWeb.Models.Emp10>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Employee List</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Job</th>
                        <th>Hire Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var emp in Model)
                        {
                                    <tr>
                                        <td>@emp.Empno</td>
                                        <td>@emp.Ename</td>
                                        <td>@emp.Job</td>
                                        <td>@emp.Hiredate</td>
                                        <td>
                                            <a href="@Url.Action("Details", "Emp", new { id = emp.Empno })" class="btn btn-info btn-sm">Details</a>
                                            <a href="@Url.Action("Edit", "Emp", new { id = emp.Empno })" class="btn btn-warning btn-sm">Edit</a>
                                            <a href="@Url.Action("Delete", "Emp", new { id = emp.Empno })" class="btn btn-danger btn-sm">Delete</a>
                                        </td>
                                    </tr>
                        }
                    }
                    else
                    {
                            <tr>
                                <td colspan="5" class="text-center">No Employees Found</td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
